<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/registerbck"
    android:orientation="vertical"
    tools:context=".MainActivity">

  <TextView
      android:id="@+id/tv_login"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/qb_px_40"
      android:gravity="center"
      android:text="登录"
      android:textColor="@color/white"
      android:textSize="18sp" />

  <ImageView
      android:id="@+id/img_logo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/qb_px_80"
      android:src="@mipmap/ic_launcher" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/qb_px_100"
      android:layout_marginTop="130dp"
      android:layout_marginRight="@dimen/qb_px_100"

      android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/imgphone" />

    <com.mingmen.canting.defineview.ClearEditText
        android:id="@+id/edit_Phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_80"
        android:background="@null"
        android:hint="请输入您手机号"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="@dimen/qb_px_30"
        android:textColor="@color/white"
        android:textColorHint="@color/white"

        android:textSize="@dimen/qb_px_28" />
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.8dp"
      android:layout_marginLeft="@dimen/qb_px_80"
      android:layout_marginTop="@dimen/qb_px_20"
      android:layout_marginRight="@dimen/qb_px_80"
      android:background="@color/white" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/qb_px_100"
      android:layout_marginTop="@dimen/qb_px_56"
      android:layout_marginRight="@dimen/qb_px_80"

      android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/imgpwd" />

    <com.mingmen.canting.defineview.ClearEditText
        android:id="@+id/edit_Passwrord"
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_80"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:background="@null"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLength="16"
        android:paddingLeft="@dimen/qb_px_30"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/qb_px_28" />

    <LinearLayout
        android:layout_width="@dimen/qb_px_51"
        android:layout_height="match_parent"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/img_close"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:background="@mipmap/closeeye"
          android:visibility="visible" />

      <ImageView
          android:id="@+id/img_open"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"

          android:background="@mipmap/openeye"
          android:visibility="gone" />

    </LinearLayout>

  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.7dp"
      android:layout_marginLeft="@dimen/qb_px_80"

      android:layout_marginTop="@dimen/qb_px_20"
      android:layout_marginRight="@dimen/qb_px_80"
      android:background="@color/white" />

  <Button
      android:id="@+id/btn_login"
      android:layout_width="match_parent"
      android:layout_height="@dimen/qb_px_98"
      android:layout_marginLeft="@dimen/qb_px_70"
      android:layout_marginTop="@dimen/qb_px_216"
      android:layout_marginRight="@dimen/qb_px_70"
      android:background="@drawable/btnselector"
      android:text="登录"
      android:textColor="@color/white"
      android:textSize="@dimen/qb_px_34" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/qb_px_40"
      android:layout_marginLeft="@dimen/qb_px_80"
      android:layout_marginTop="@dimen/qb_px_30"
      android:layout_marginRight="@dimen/qb_px_80"
      android:gravity="center"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/text_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textColor="@color/white"
        android:textSize="@dimen/qb_px_30" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/qb_px_5"
        android:layout_marginBottom="@dimen/qb_px_5"
        android:background="@color/white" />

    <TextView
        android:id="@+id/text_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="去注册"
        android:textColor="@color/white"
        android:textSize="@dimen/qb_px_30" />
  </LinearLayout>

</LinearLayout>