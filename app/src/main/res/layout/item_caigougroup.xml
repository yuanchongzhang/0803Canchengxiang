<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:background="@drawable/shape_caigouwhite"

    android:orientation="vertical">
  <!--    android:background="@drawable/shape_caigouwhite"-->
  <LinearLayout
      android:id="@+id/lable_selectcanting"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:layout_marginTop="20dp"
      android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:background="@drawable/shape_normal_rebgl"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="采购单详情    "
        android:textColor="@color/white" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="-1dp"
        android:background="@mipmap/arrow_redright"
        android:visibility="visible" />

    <TextView
        android:id="@+id/text_selegongying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择供应商"
        android:layout_gravity="right"
        android:gravity="right"
        />

  </LinearLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="30dp"
      android:layout_marginRight="60dp"
      android:background="@color/white"
      android:padding="1dp">

    <CheckBox
        android:id="@+id/store_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:background="@null"
        android:button="@null"
        android:drawableLeft="@drawable/checkbox_bg"
        android:gravity="center"
        android:minWidth="32dp"
        android:minHeight="48dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/store_checkBox"
        android:drawableLeft="@drawable/shop"
        android:drawableRight="@drawable/right_arrow"
        android:drawablePadding="5dp"
        android:text="小马的店铺"
        android:textColor="@color/grey_color2"
        android:textSize="18sp" />

    <Button
        android:id="@+id/store_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:text="编辑"
        android:textColor="@color/grey_color2"
        android:textSize="16sp" />
  </RelativeLayout>
</LinearLayout>