<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/registerbck"
    android:orientation="vertical">

    <include layout="@layout/toolbar_title" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/qb_px_120"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_100"
        android:layout_marginTop="70dp"
        android:layout_marginRight="@dimen/qb_px_100"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/imgphone" />

        <com.mingmen.canting.defineview.ClearEditText
            android:id="@+id/edit_Phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_80"
            android:background="@null"
            android:hint="请输入您的手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="@dimen/qb_px_30"
            android:textColor="@color/white"
            android:textColorHint="@color/white"

            android:textSize="@dimen/qb_px_30" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="@dimen/qb_px_80"
        android:layout_marginTop="@dimen/qb_px_20"
        android:layout_marginRight="@dimen/qb_px_80"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_128"
        android:layout_marginLeft="@dimen/qb_px_100"

        android:layout_marginRight="@dimen/qb_px_80"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/qb_px_15"
            android:src="@mipmap/imgpwd" />

        <com.mingmen.canting.defineview.ClearEditText
            android:id="@+id/edit_yanzheng"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_80"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/qb_px_15"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:maxLength="6"
            android:paddingLeft="@dimen/qb_px_30"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/qb_px_30" />

        <Button
            android:id="@+id/btn_getcode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_65"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/qb_px_15"
            android:background="@drawable/register_shape_yanzhengma"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/qb_px_28" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginLeft="@dimen/qb_px_80"

        android:layout_marginRight="@dimen/qb_px_80"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_128"
        android:layout_marginLeft="@dimen/qb_px_100"

        android:layout_marginRight="@dimen/qb_px_80"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/qb_px_15"
            android:src="@mipmap/pwdregister" />

        <com.mingmen.canting.defineview.ClearEditText
            android:id="@+id/edit_pwd"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_80"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/qb_px_15"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入您的登录密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="@dimen/qb_px_30"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/qb_px_30" />

        <LinearLayout
            android:layout_width="@dimen/qb_px_51"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_close_first"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/qb_px_65"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/qb_px_15"
                android:src="@mipmap/closeeye"
                android:textColor="@color/white"
                android:textSize="@dimen/qb_px_28" />

            <ImageView
                android:id="@+id/img_open_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/qb_px_15"
                android:background="@mipmap/openeye"
                android:visibility="visible" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginLeft="@dimen/qb_px_80"

        android:layout_marginRight="@dimen/qb_px_80"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_128"
        android:layout_marginLeft="@dimen/qb_px_100"

        android:layout_marginRight="@dimen/qb_px_80"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/qb_px_15"
            android:src="@mipmap/pwdregister" />

        <com.mingmen.canting.defineview.ClearEditText
            android:id="@+id/edit_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/qb_px_80"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/qb_px_15"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请再次确认您的登录密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="@dimen/qb_px_30"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/qb_px_30" />

        <LinearLayout
            android:layout_width="@dimen/qb_px_51"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_close_second"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/qb_px_65"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/qb_px_15"
                android:src="@mipmap/closeeye"
                android:textColor="@color/white"
                android:textSize="@dimen/qb_px_28"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_open_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/qb_px_15"
                android:background="@mipmap/openeye"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginLeft="@dimen/qb_px_80"

        android:layout_marginRight="@dimen/qb_px_80"
        android:background="@color/white" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_98"
        android:layout_marginLeft="@dimen/qb_px_70"
        android:layout_marginTop="@dimen/qb_px_216"
        android:layout_marginRight="@dimen/qb_px_70"
        android:background="@drawable/btnselector"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="@dimen/qb_px_34" />


</LinearLayout>

